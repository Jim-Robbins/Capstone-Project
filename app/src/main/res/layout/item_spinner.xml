<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_spinner_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/spinner_top_bottom_padding"
    android:paddingEnd="@dimen/spinner_start_end_padding"
    android:paddingStart="@dimen/spinner_start_end_padding"
    android:paddingTop="@dimen/spinner_top_bottom_padding">

    <TextView
        android:id="@+id/text_spinner_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textSize="@dimen/spinner_font_size"
        tools:text="GEN" />
</LinearLayout>